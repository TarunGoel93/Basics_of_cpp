#include<iostream>
using namespace std;
int main()
{
  
    int size;
    int search;
    
    cout<<"Enter the size of the array : ";
    cin>>size;
    
    int arr[size];
     
    cout<<"Enter the elements : "<<endl;
    
    for(int i=0;i<size;i++){
       cin>>arr[i];
    }
    cout<<"The array elemnt is : "<<endl;
    
    for(int i=0;i<size;i++){
        cout<<arr[i]<<" ";
    }
    
    cout<<endl;
    
    cout<<"Enter the element to search : ";
    cin>>search;
    
    
    for(int i=0;i<size;i++){
        if(arr[i]==search){
        cout<<i<<endl;
         }        
    }
 
return 0;    
}
