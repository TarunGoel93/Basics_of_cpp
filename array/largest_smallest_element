#include<iostream>
#include<algorithm>
using namespace std;
int main()
{
  
    int size;
    cout<<"Enter the size of the array : ";
    cin>>size;
    
    int arr[size];
     
    cout<<"Enter the elements : "<<endl;
    
    for(int i=0;i<size;i++){
       cin>>arr[i];
    }
    cout<<"The array elemnt is : "<<endl;
    
    sort(arr,arr+size);
    
    for(int i=0;i<size;i++){
        cout<<arr[i]<<" ";
    }
    
    cout<<endl;
    
    cout<<"Smallest Element : "<<arr[0]<<endl;
    cout<<"Largest Element : "<<arr[size-1]<<endl;
    
  
    
return 0;    
}
