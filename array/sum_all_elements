#include<iostream>
using namespace std;
int main()
{
  
    int size;
    int sum=0;
    
    cout<<"Enter the size of the array : ";
    cin>>size;
    
    int arr[size];
     
    cout<<"Enter the elements : "<<endl;
    
    for(int i=0;i<size;i++){
       cin>>arr[i];
    }
    cout<<"The array elemnt is : "<<endl;
    
    for(int i=0;i<size;i++){
        cout<<arr[i]<<" ";
    }
    
    cout<<endl;
    
    for(int i=0;i<size;i++){
        sum+=arr[i];
    }
    cout<<"Sum : "<<sum<<endl;
 
return 0;    
}
