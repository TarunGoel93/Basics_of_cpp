#include<iostream>
using namespace std;

int main()
{
    int n;
    int sum=0;
    
    cout<<"Enter a positive number (n) : ";
    cin>>n;
    
    if(n<0){
        cout<<"Invalid number."<<endl;
    }
    else if(n==0){
        cout<<"0"<<endl;
    }
    else{
        for(int i=n;i>=1;i--){
            sum+=i;
        }
        cout<<sum<<endl;
    }
    
    return 0;
}
