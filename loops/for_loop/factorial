#include<iostream>
using namespace std;

int main()
{
    int x,fact=1;
    
    cout<<"Enter a positive number : ";
    cin>>x;
    
    if(x<0){
        cout<<"Enter a positive number"<<endl;
    }
    else if(x==0){
        cout<<"Factorial of 0 is : 1"<<endl;
    }
    else{
        for(int i=x;i>=1;i--){
            fact*=i;
        }
        cout<<"Factorial of "<<x<<" is : "<<fact<<endl;
    }
    
    return 0;
}
